@font-face {
    font-family: aria-mt-regular;
    font-weight: 100;
    src: url({{root}}/assets/fonts/arial-mt-regular.ttf);
    -fs-pdf-font-embed: embed;
    -fs-pdf-font-encoding: Identity-H
}

@page {
     size: A4;
     margin: 1cm auto 175px auto;
     @top-center {
         content: element(header)
     }
     @bottom-center {
         content: element(footer)
     }
 }

body {
    color: Navy;
    font-family: aria-mt-regular;
}

div {
    margin: 0;
}

.no-margin {
    margin: 0;
    padding: 0;
}

.title-block {
    color: white;
    background-color: green;
    padding: 20px;
}

.title-block-fail {
color: white;
background-color: blue;
padding: 20px;
}

.header-block {
    width:  100%;
}

.header-left {
    display: inline-block;
}


.header-right {
    display: inline-block;
    float: right;
}

.inline {
    display: inline-block;
}

.tick {
    width: 15pt
}

.tick-box {
    min-width: 20px;
    min-height: 20px;
    border: 1px solid black;
    display: inline-block;
    margin-left: 5px;
}

.trap-block {
    display: inline-block;
    width: 100%;
}

.trap-left {
    display: inline-block;
    float: left;
}

.trap-right {
    display: inline-block;
    float: right;
}
.modType {
    margin-right: 10px;
}
.additional-notes {
    min-height: 100px;
}

.footer-page1 {
    display: inline-block;
    width: 100%;
}
