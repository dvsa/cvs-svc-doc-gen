html {
box-sizing: !important margin-box;
font-size: 12px;
}
*, *:before, *:after {
box-sizing: !important margin-box;
}

@font-face {
font-family: nta;
font-weight: 100;
src: url({{root}}/assets/fonts/NTA-Light.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: nta-bold;
font-weight: 700;
src: url({{root}}/assets/fonts/NTA-Bold.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: gds-transport;
font-weight: 400;
src: url({{root}}/assets/fonts/GDSTransportWebsite.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: courier-new-regular;
font-weight: 100;
src: url({{root}}/assets/fonts/courier-new-regular.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: courier-new-bold;
font-weight: 100;
src: url({{root}}/assets/fonts/courier-new-bold.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@page {
size: A4;
margin: 1cm 1cm 50px 1cm;
@top-center {
content: element(header)
}
@bottom-center {
content: element(footer)
}
}

@page :first {
@bottom-center {
content: element(footer-first-page)
}
}

body,
html {
font-family: nta;
font-weight: 100;
line-height: 1;
margin: 0;
-fs-page-sequence: start;
page-break-before: always
}

.clearfix {
clear: both
}

.util-avoid-page-break-inside {
page-break-inside: avoid
}

.footer {
position: running(footer)
}

.footer--first-page {
position: running(footer-first-page)
}

.footer__wrapper {
width: 19cm;
margin: 0 auto
}

.footer__bottom {
display: table;
width: 100%;
padding-top: 8px
}

.footer__bottom-one {
text-align: left
}

.footer__bottom-one,
.footer__bottom-two {
width: 33.333%;
display: table-cell;
vertical-align: middle
}

.footer__bottom-two {
text-align: center
}

.footer__bottom-three {
width: 33.333%;
display: table-cell;
vertical-align: middle;
text-align: right
}

.footer__certificate-tag {
text-align: center;
margin-top: 5px
}

.footer__certificate-tag-text {
display: block;
font-family: nta;
font-weight: 100
}


.footer__bottom-light-text {
display: block;
font-family: nta;
font-weight: 100
}

table {
border: 1px solid #6e6e6e;
border-collapse: collapse;
line-height: 13.2px;
font-size: 12px;
}

.one-half-width {
width: 50%;
}

.one-third-width {
width: 33%;
}

.one-sixth-width {
width: 16%;
}

.two-thirds-width {
width: 66%;
}

.full-width {
width: 100%;
}

.large-row {
width: 45%;
}

.small-row {
width: 5%;
}

.combined-row {
width: 20%;
}

th {
border-right: 1px solid #6e6e6e;
border-bottom: 1px solid #6e6e6e;
text-align: center;
}

td {
border: 1px solid #6e6e6e;
}

.section-title {
padding-left: 5px;
}

.checklist-table td {
padding-bottom:2px;
}

.padded {
padding-left: 20px;
}

.bottom-border {
border: 0;
border-bottom: 1px solid #6e6e6e;
}

.no-bottom-border {
border: 0;
}

.float-left {
float: left;
}

.float-right {
float: right;
}

.clear {
clear: both;
}

.header__crest-img {
width: 130px
}

.data-list {
list-style: none;
width: 100%;
float: left;
margin: 4px 0;
}

.data-list li {
padding-left: 9px;
display: inline-block;
float: left;
padding-top: 5px;
}

.data-list > li:first-child {
padding-left: 0;
}

.data-list--two li {
width: 172.75px;
}

.data-list--four li {
width: 172.75px;
}

.data-list li > span {
font-family: courier-new-regular;
font-weight: 100;
clear: both;
margin-top: 6px;
padding: 7px 5px;
display: block;
border:1px solid #6e6e6e;
height:12px;
}

.text-align-center {
text-align: center;
}

.one-half-width-bottom-table {
width:49%
}

.brake-results-table td,th {
padding-top: 5px;
padding-bottom: 5px;
}

.make-model-width {
width:355px;
}


