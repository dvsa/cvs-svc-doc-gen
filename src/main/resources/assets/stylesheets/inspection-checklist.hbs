}

.titles h3 {
font-size:  22px;
margin: 0;
float: left;
padding: 3px 0
}

.titles h3:first-child + h3 {
float: right;
}

.large-row {
width: 45%;
}

.small-row {
width: 5%;
}

.combined-row {
width: 20%;
}

th {
border-right: 1px solid #6e6e6e;
border-bottom: 1px solid #6e6e6e;
text-align: center;
}

td {
border: 1px solid #6e6e6e;
}

.padded {
padding-left: 20px;
padding-bottom: 2px;
}

.bottom-border {
