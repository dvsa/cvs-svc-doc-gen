html {
font-family: arial, sans-serif;
font-size: 12px;
}

.footer {
margin-bottom: 20px;
float: left;
width: 100%;
}

.footer td,
.footer th {
padding: 4px;
}

h3 {
font-weight: normal;
font-size: 18px;
}


@font-face {
font-family: nta;
font-weight: 100;
src: url({{root}}/assets/fonts/NTA-Light.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: nta-bold;
font-weight: 700;
src: url({{root}}/assets/fonts/NTA-Bold.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: gds-transport;
font-weight: 400;
src: url({{root}}/assets/fonts/GDSTransportWebsite.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@page {
size: A4;
margin: 1cm 1cm 50px 1cm;
@top-center {
content: element(header)
}
@bottom-center {
content: element(footer)
}
}

@page :first {
@bottom-center {
content: element(footer-first-page)
}
}

body,
html {
font-weight: 100;
line-height: 1;
margin: 0;
-fs-page-sequence: start;
page-break-before: always
}

.clearfix {
clear: both
}

.util-avoid-page-break-inside {
page-break-inside: avoid
}

.footer {
position: running(footer)
}

.footer--first-page {
position: running(footer-first-page)
}

.footer__wrapper {
width: 19cm;
margin: 0 auto
}

.footer__top {
text-align: right;
position: relative
}

.footer__top-signature-line {
width: 150px;
height: 1px;
background: #000;
float: right
}

.footer__bottom {
display: table;
width: 100%;
padding-top: 8px
}

.footer__bottom-one {
text-align: left
}

.footer__bottom-one,
.footer__bottom-two {
width: 33.333%;
display: table-cell;
vertical-align: middle
}

.footer__bottom-two {
text-align: center
}

.footer__bottom-three {
width: 33.333%;
display: table-cell;
vertical-align: middle;
text-align: right
}

.footer__bottom-light-text {
display: block;
font-family: nta;
font-weight: 100
}

.footer__bottom-bold-text {
display: block
}

.footer__bottom-bold-text,
.footer__bottom-page-counter-text {
font-family: nta-bold;
font-weight: 700
}

table * {
outline: 0;
}

table {
border: 1px solid #6e6e6e;
border-collapse: collapse;
width:100%;
}

.one-quarter-width {
width: 25%;
}

.one-half-width {
width: 49.9%;
}

.one-third-width {
width: 33.3%;
}

.one-sixth-width {
width: 16%;
}

.two-thirds-width {
width: 66.6%;
}

.two-thirds-width-end {
width: 66.6%;
}

.full-width {
width: 100%;
}

.total-row td {
padding: 6px
}

.details__list {
padding: 0;
list-style: none;
float: left;
width: 100%;
margin: 0;
}

.details {
float: left;
width: 100%;
margin-bottom: 16px;
margin-top: 16px;
}

.details__list li {
display: inline-block;
width: 33%;
}

.details {
width: 90%:
}

.details-input {
font-family: "Courier";
width: 100%;
padding: 3px 8px;
font-size: 14px;
height:14px;
border-bottom: 1px solid black;
}

.details__list li:first-child {
width: 100%;
display: block;
margin-bottom: 6px;
}

.details__list p {
margin: 0;
}

.details__list li  p {
padding: 5px;
padding-left: 0;
position: relative;1
top: -2px;
float: left;
