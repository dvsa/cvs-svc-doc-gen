
@page {
size: A4 portrait;
margin: 20px 24px 0 24px;
padding: 0;
}

p { margin:5px; }

p,
div,
span {
font-family: "Calibri", sans-serif;
}

h1 {
font-size: 100%;
}

html,
body {
line-height: 1;
margin: 0;
-fs-page-sequence: start;
page-break-inside: avoid;
font-size: 90%;
}

*,
:after,
:before {
box-sizing: border-box;
line-height: 1;
}

.separate-page {
page-break-after: always;
}
.section-border {
border-style: solid;
border-color: black grey grey grey;
margin-bottom: 5px;
}

.section-title-border {
border-style: solid;
border-width: 2px;
border-color: black;
background-color: grey;
font-weight:bold;
text-align: center;
margin-top: -2px;
width: 100%;
}

.section-title-border h1 {
margin: 0px;
padding: 1px;
}

.section-text-wrapper {
padding: 3px;
}

.exam-list {
width: 100%;
}

#left-exam-list {
float: left;
width: 50%;
}

#right-exam-list {
float: right;
width: 50%;
}

.footer {
width: 100%;
}

.footer-left {
display: inline-block;
width: 50%;
}

.footer-mid {
display: inline-block;
text-align: center;
}

.footer-right {
text-align: right;
display: inline-block;
float: right;
width: 40%;
}

#no-margin-p {
margin: 0px;
}

.bold-title {
font-size: 1.5em;
}

.vehicle-section-list {
margin-top: 0px;
padding-top: 0px;
list-style-type: none;
}
.item-list {
margin-left: 50px;
margin-bottom: 0px;
}

.item-list li {
white-space: pre-wrap;
}

.refusal-list {
clear: both;
}

.refusal-list p {
margin: 0px;
clear: both;
}

.page-header {
width: 100%;
margin-top: 2px;
}

.header-left {
display: inline-block;
}
.header-right {
display: inline-block;
float: right;
}

#defect-details-subtitle-border {
background-color: white;
}

.header-serial-no {
width: fit-content;
border-style: solid;
border-width: 1px;
margin-bottom: 1px;
}

.header-serial-no-title {
padding: 2px;
}

.header-serial-no-value {
font-weight: normal;
margin-left: 5em;
text-wrap: none;
}

.header-pagination {
width: fit-content;
border-style: solid;
border-width: 1px;
padding-left: 1em;
padding-right: 1em;
padding-top: 2em;
padding-bottom: 2em;
}

.vehicle-detail-table {
width: 100%;
border-collapse: collapse;
margin-bottom: 1em;
}

.inspector-detail-table {
width: 100%;
border-collapse: collapse;
}

.table-row-cell {
border-style: solid;
border-width: 1px;
}

#data-prot-section{
margin-top: 5px;
}