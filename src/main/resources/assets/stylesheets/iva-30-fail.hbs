.separate-page {
    page-break-after: always;
}
@page {
    size: A4 portrait;
    margin: 20px 24px 0 24px;
    padding: 0;
}

p { margin:2px; }

html,
body {
    line-height: 1;
    margin: 0;
    -fs-page-sequence: start;
    page-break-inside: avoid;
    font-size: 85%;
}

*,
:after,
:before {
    box-sizing: border-box;
    line-height: 1;
}

.section-border {
    border-style: solid;
    border-color: black grey grey grey;
    padding-bottom: 20px;
}

.section-title-border {
    border-style: solid;
    border-color: black;
    background-color: grey;
    font-weight:bold;
    text-align: center;
    margin-left: -2px;
    margin-top: -2px;
}

.section-title-border h1 {
    margin: 0px;
    padding: 0px;
}

.section-text-wrapper {
    padding: 10px 10px 10px 3px;
}

.exam-list {
    width: 100%;
}

.exam-list li {
    transform: rotate(45deg);
    list-style-type: square
}

#left-exam-list {
    float: left;
    width: 50%;
}

#right-exam-list {
    float: right;
    width: 50%;
}
