@font-face {
font-family: aria-mt-regular;
font-weight: 100;
src: url({{root}}/assets/fonts/arial-mt-regular.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: aria-mt-bold;
font-weight: 100;
src: url({{root}}/assets/fonts/arial-mt-bold.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: courier-new-regular;
font-weight: 100;
src: url({{root}}/assets/fonts/courier-new-regular.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@font-face {
font-family: courier-new-bold;
font-weight: 100;
src: url({{root}}/assets/fonts/courier-new-bold.ttf);
-fs-pdf-font-embed: embed;
-fs-pdf-font-encoding: Identity-H
}

@page {
size: A4;
margin: 20px auto
}

body,
html {
font-family: aria-mt-regular;
font-weight: 100;
line-height: 1;
margin: 0;
-fs-page-sequence: start;
page-break-before: always
}

*,
:after,
:before {
box-sizing: border-box;
line-height: 1
}

.certificate {
width: 21cm
}

.certificate__wrapper {
width: 20cm;
margin: 0 auto
}

.header {
display: table;
width: 100%;
margin-bottom: 10px
}

.header--welsh {
display: block
}

.header--welsh:after {
content: " ";
display: block;
clear: both
}

.header__crest {
display: table-cell;
vertical-align: middle
}

.header--welsh .header__crest {
display: block;
float: left;
width: 265px
}

.header--welsh .header__crest:after {
content: " ";
display: block;
clear: both
}

.header__crest-img {
width: 130px
}

.header--welsh .header__crest-img {
float: left
}

.header__crest-message {
display: table-cell;
vertical-align: middle;
width: 100px;
padding-left: 10px
}

.header__crest-message--welsh-vt30 {
padding-left: 5px
}

.header--welsh .header__crest-message {
display: block;
float: left;
width: 170px;
white-space: nowrap;
margin-top: 28px
}

.header--single-line-crest-message .header__crest-message {
width: 100%;
white-space: nowrap
}

.header__crest-message-text {
font-family: aria-mt-bold;
font-weight: 100;
display: block;
font-size: 30px;
line-height: 34px;
text-transform: uppercase;
text-align: center;
margin: 0;
padding: 0
}

.header__crest-message--welsh-vt30 .header__crest-message-text {
font-size: 25px;
line-height: 30px;
text-align: left
}

.header__title {
display: table-cell;
vertical-align: middle;
text-align: right;
width: 100%
}

.header--welsh .header__title {
display: block;
float: right;
width: 300px;
white-space: nowrap;
margin-top: 15px
}

.header--single-line-crest-message .header__title {
width: 100%;
white-space: nowrap
}

.header__title-text {
font-family: aria-mt-bold;
font-weight: 100;
font-size: 21px;
line-height: 24px;
margin: 0;
padding: 0
}

.header--welsh .header__title-english {
display: block;
margin-bottom: 5px
}

.header--welsh .header__title-welsh {
display: block
}

.boxes__row {
margin-left: -.333333cm
}

.boxes__row:after {
content: " ";
display: block;
clear: both
}

.boxes__item {
float: left;
margin-bottom: 10px
}

.boxes__item--welsh-vt30-advisories {
margin-bottom: 5px
}

.boxes__item--negative-margin-top {
margin-top: -5px
}

.boxes__item--one-third {
width: 6.444444cm;
margin-left: .333333cm
}

.boxes__item--one-quarter {
width: 4.7488888cm;
margin-left: .333333cm
}

.boxes__item--one-half {
width: 9.8333333cm;
margin-left: .333333cm
}

.boxes__item--full {
width: 20cm;
margin-left: .333333cm
}

.boxes__item-space-above-title {
display: block;
height: 16px
}

.boxes__item-space-above-title--small {
height: 16px
}

.boxes__item-title {
display: block;
margin-bottom: 3px;
font-family: aria-mt-regular;
font-weight: 100;
font-size: 12px;
line-height: 16px
}

.boxes__item-title--bold {
font-family: aria-mt-bold;
font-weight: 100
}

.boxes__item-box {
border: 1px solid #000;
position: relative;
height: 20pt
}

.boxes__item--extra-small .boxes__item-box {
height: 18px
}

.boxes__item--small .boxes__item-box {
height: 60px
}

.boxes__item--small-medium .boxes__item-box {
height: 30px
}

.boxes__item--medium .boxes__item-box {
height: 80px
}

.boxes__item--medium-small .boxes__item-box {
height: 150px
}

.boxes__item--medium-large .boxes__item-box {
height: 200px
}

.boxes__item--large .boxes__item-box {
height: 195px
}

.boxes__item--ct30-extra-large .boxes__item-box {
height: 280px
}

.boxes__item--extra-large .boxes__item-box {
height: 300px
}

.boxes__item--xxlarge .boxes__item-box {
height: 390px
}

.boxes__item--xxxlarge .boxes__item-box {
height: 655px
}

.boxes__item--ct30-advisories .boxes__item-box {
height: 170px
}

.boxes__item--ct30-small .boxes__item-box {
height: 80px
}

.boxes__item--vt32-large .boxes__item-box {
height: 636px
}

.boxes__item--welsh-vt20 .boxes__item-box {
height: 245px
}

.boxes__item--welsh-vt30-odometer .boxes__item-box {
height: 34px
}

.boxes__item--welsh-vt30-compliance .boxes__item-box {
height: 160px
}

.boxes__item--welsh-vt30-compliance-compact .boxes__item-box {
height: 405px;
margin-top: -11px
}

.boxes__item--welsh-vt30-compliance-no-advisories .boxes__item-box {
height: 360px
}

.boxes__item--welsh-vt30-advisories .boxes__item-box {
height: 135px
}

.boxes__item--welsh-vt32 .boxes__item-box {
height: 543px
}

.boxes__item--welsh-vt32ve .boxes__item-box {
height: 515px
}

.boxes__item-content {
position: absolute;
top: 1px;
left: 3pt
}

.boxes__item-text {
display: block;
font-family: courier-new-regular;
font-weight: 100;
font-size: 12.5px;
line-height: 12.5px
}

.boxes__item--one-third .boxes__item-text {
width: 6.1cm
}

.boxes__item--one-quarter .boxes__item-text {
width: 4.3cm
}

.boxes__item--one-half .boxes__item-text {
width: 9.2cm
}

.boxes__item--full .boxes__item-text {
width: 19cm
}

.boxes__item-text__heading {
position: relative;
display: inline-block;
font-size: 12.5px;
line-height: 12.6px;
font-family: courier-new-bold;
font-weight: 100;
margin: 0;
padding: 0
}

.boxes__item-text__heading:after {
content: " ";
display: block;
position: absolute;
bottom: 0;
left: 0;
height: 1px;
background: #000;
width: 100%
}

.boxes__item-padded-text {
padding-left: 80px
}

.bottom--two-columns {
margin-left: -.333333cm
}

.bottom--two-columns:after,
.bottom--two-columns:before {
content: " ";
display: block;
clear: both
}

.bottom__column {
float: left;
width: 9.8333333cm;
margin-left: .333333cm
}

.bottom__inner--welsh {
margin-top: 20px
}

.bottom__inner--padding-top {
padding-top: 10px
}

.bottom__inner--padding-top-large {
padding-top: 20px
}

.bottom__inner--padding-left {
padding-left: 30px
}

.bottom__inner--padding-bottom {
padding-bottom: 7px
}

.bottom__heading {
margin: 0 0 10px;
padding: 0;
font-family: aria-mt-bold;
font-weight: 100;
font-size: 13px;
line-break: 18px
}

.bottom__heading--no-margin {
margin: 0
}

.bottom__heading--extra-small-margin-bottom {
margin-bottom: 3px
}

.bottom__heading--small-margin-bottom {
margin-bottom: 5px
}

.bottom__paragraph {
font-family: aria-mt-regular;
font-weight: 100;
font-size: 12px;
line-height: 15px;
margin: 0 0 10px;
padding: 0 2px 0 0;
position: relative
}

.bottom__paragraph--ct20-last-paragraph {
margin-top: 110px;
padding-bottom: 20px
}

.bottom__paragraph--ct30-last-paragraph {
padding-bottom: 10px
}

.bottom__paragraph--vt32ve-small-font-size {
font-size: 11px;
line-break: 11px
}

.bottom--welsh-vt20 .bottom__paragraph {
font-size: 11px;
line-height: 13px
}

.bottom--welsh-vt30 .bottom__paragraph {
font-size: 12px;
line-height: 13px
}

.bottom__paragraph:last-child {
margin-bottom: 0
}

.bottom__paragraph-number {
position: absolute;
top: 0;
left: -15px;
display: block;
font-family: aria-mt-regular;
font-weight: 100;
font-size: 12px;
line-height: 15px
}

.bottom__paragraph-bold {
font-family: aria-mt-bold;
font-weight: 100
}

.bottom__paragraph--no-margin {
margin: 0
}

.bottom__link {
text-decoration: none;
color: #000;
font-family: aria-mt-bold;
font-weight: 100
}

.footer__inner {
width: 100%
}

.footer__inner--ct-certificate {
text-align: center
}

.footer__inner-left,
.footer__inner-right {
float: left;
width: 50%;
text-align: right
}

.footer__text {
text-align: center;
font-size: 11.5px;
line-height: 11.5px;
font-family: aria-mt-regular;
font-weight: 100
}

.footer__pagination {
white-space: nowrap
}

.footer__pagination-text {
font-size: 11.5px;
line-height: 11.5px;
font-family: aria-mt-regular;
font-weight: 100
}

.footer__pagination-text--page-number:before {
content: counter(page)
}

.footer__pagination-text--pages-count:before {
content: counter(pages)
}
